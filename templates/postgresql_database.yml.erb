default: &default
  encoding: utf8
  adapter: postgresql
  pool: 5
  timeout: 5000
  host: localhost
  username: postgres

development:
  <<: *default
  database: <%= @app_path %>_development

test:
  <<: *default
  database: <%= @app_path %>_test

staging:
  <<: *default
  database: <%= @app_path %>_staging

production:
  <<: *default
  database: <%= @app_path %>_production
